<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="ListAppearance" parent="AppTheme">
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="ListImageAppearance" parent="AppTheme">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="ListMainTextAppearance" parent="AppTheme">
        <item name="android:padding">4dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/list_main_text</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Title</item>
    </style>

    <style name="ListSecondaryTextAppearance" parent="AppTheme">
        <item name="android:padding">4dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/list_secondary_text</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Body1</item>
    </style>

    <style name="ListMainDimishedTextAppearance" parent="AppTheme">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/list_secondary_text</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Body1</item>
    </style>

    <style name="NavigationDrawerTitle" parent="AppTheme">
        <item name="android:padding">4dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/background_material_light</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Body1</item>
    </style>

</resources>
